@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model AunctionApp.BLL.Models.RegisterVM;


<section class="breadcrumbs">
    <div class="container">
    </div>
</section>

@if (@TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (@TempData["ErrMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["ErrMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<main id="main">
        <div class="container mt-4">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Register</h5>
                                    </div>

                                    <form class="row g-3" asp-controller="User" asp-action="SaveUser">

                                        <div class="alert-danger" asp-validation-summary="@ValidationSummary.ModelOnly"></div>

                                       
                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.FirstName" class="form-label"></label>
                                            <input type="text" asp-for="@Model.FirstName" placeholder="First Name" class="form-control" required>
                                            <span asp-validation-for="@Model.FirstName"></span>

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.LastName" class="form-label"></label>
                                            <input type="text" asp-for="@Model.LastName" placeholder="Last Name" class="form-control" required>
                                            <span asp-validation-for="@Model.LastName"></span>                                

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.Username" class="form-label"></label>
                                            <input type="text" asp-for="@Model.Username" placeholder="UserName" class="form-control" required>
                                            <span asp-validation-for="@Model.Username"></span>

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.Address" class="form-label"></label>
                                            <input type="text" asp-for="@Model.Address" placeholder=" Address" class="form-control" required>
                                            <span asp-validation-for="@Model.Address"></span>

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.Email" class="form-label"></label>
                                            <input type="text" asp-for="@Model.Email" placeholder="Email" class="form-control" required>
                                            <span asp-validation-for="@Model.Email"></span>

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                                            <input type="text" asp-for="@Model.PhoneNumber" placeholder="Phonenumber" class="form-control" required>
                                            <span asp-validation-for="@Model.PhoneNumber"></span>

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.Password" class="form-label"></label>
                                            <input type="text" asp-for="@Model.Password" placeholder="Password" class="form-control" required>
                                            <span asp-validation-for="@Model.Password"></span>

                                        </div>

                                        <div class="col-12 m-2">
                                            <label asp-for="@Model.ConfirmPassword" class="form-label"></i></label>
                                            <input type="text" asp-for="@Model.ConfirmPassword" placeholder="confirm password" class="form-control" required />
                                            <span asp-validation-for="@Model.ConfirmPassword"></span>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Register</button>
                                        </div>
                                        <div class="col-12">
                                            <p class="small mb-0">Already have an account? <a asp-area=" " asp-controller="User" asp-action="SignIn">Sign In</a></p>
                                        </div>
                                    </form>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </section>
                </div>
    </main>

    @section Scripts
        {
        @{
            Html.RenderPartial("_ValidationScriptsPartial");
        }
    ;
    }
