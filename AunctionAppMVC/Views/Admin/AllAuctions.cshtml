@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model IEnumerable<AunctionApp.BLL.Models.AuctionVMForm>

<div class="container">
<section class="breadcrumbs">
    <div class="container">
    </div>
</section><!-- End Breadcrumbs -->

@if (@TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (@TempData["ErrMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["ErrMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Aunction Name</th>
            <th scope="col">Price</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th> 
        </tr>
    </thead>
    
    @foreach (var item in Model.Select((value, i) => new { value, i }))
    {
    <tbody>

        <tr>
            <th scope="row">@(item.i + 1)</th>
            <td>@item.value.ProductName</td>
            <td>@item.value.ActualAmount</td>
            <td>@item.value.Status</td>
           
            <td class="d-flex">

                    <span class="px-1">
                        <form action="@Url.Action("SaveStatus", "Admin", new { ProductId = @item.value.Id})" method="Get">
                            <input type="submit" class="btn btn-success btn-sm" value="sell" placeholder="@item.value.Id" />
                        </form>
                    </span>

                    <span class="px-1">
                        <form action="@Url.Action("UpdateAuction", "Admin", new { ProductId = @item.value.Id})" method="Get">
                            <input type="submit" class="btn btn-secondary btn-sm" value="Edit" placeholder="@item.value.Id" />
                        </form>
                    </span>

                    <span class="px-1">
                        <form action="@Url.Action("Delete", "Admin", new { productId = @item.value.Id})" method="post">
                            <input type="submit" class="btn btn-danger btn-sm" value="Delete" placeholder="@item.value.Id" />
                        </form>
                    </span>
            </td>
        </tr>
       
    </tbody>
    }
</table>

</div>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
}

