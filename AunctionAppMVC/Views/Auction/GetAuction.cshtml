@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@model AunctionApp.BLL.Models.AuctionVMForm;

<section class="mt-5">
    <main id="main">
        <section id="portfolio-details" class="portfolio-details">
            <div class="container shadow-lg p-3 mb-5 bg-white rounded w-70">

                <div class="row gy-4">

                    <div class="col-lg-8">
                        <div class="portfolio-details-slider swiper">
                            <div class="swiper-wrapper align-items-center">

                                <div class="swiper-slide">
                                    <img src="~/img/Auctions/@Model.ProductImagePath" alt="">
                                </div>                      

                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="portfolio-info">
                            <h3>@Model.ProductName</h3>
                            <ul>
                                <li><strong>Price: </strong>$ @Model.ActualAmount</li>
                                <li><strong>Status: </strong>@Model.Status</li>                       
                            </ul>
                        </div>
                        <div class="portfolio-description">
                            <h2>Description</h2>
                            <p>
                                @Model.Description
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </section>
    </main>
</section>
@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
 }
